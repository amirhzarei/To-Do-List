{
  "name": "taskflow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "prepare": "husky install",
    "lint-staged:format": "prettier --write",
    "lint-staged:eslint": "eslint --cache"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs}": [
      "pnpm lint-staged:eslint",
      "pnpm lint-staged:format"
    ],
    "*.{json,md,css}": [
      "pnpm lint-staged:format"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.0",
    "@radix-ui/react-tooltip": "^1.0.0",
    "@supabase/ssr": "^0.6.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-query-devtools": "^5.85.5",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.391.0",
    "next": "14.2.0",
    "next-auth": "^4.24.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.5.0",
    "eslint-config-next": "14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "sort-package-json": "^2.10.1",
    "tailwindcss": "3.4.10",
    "typescript": "^5.5.4"
  }
}
